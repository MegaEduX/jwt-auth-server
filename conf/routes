# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.pub.Application.index()

POST    /api/register               controllers.api.Register.signup()
POST    /api/login                  controllers.api.Login.login()
POST    /api/user/changePassword    controllers.api.ManageUser.changePassword()

GET     /debug/showAllUsers         controllers.Debug.showAllUsers()
GET     /debug/createJWT            controllers.Debug.createJWT()
GET     /debug/populate             controllers.Debug.populateWithTestData()

POST    /public/login/perform       controllers.pub.unauthenticated.Login.handlePerformLogin()
POST    /public/register/perform    controllers.pub.unauthenticated.Register.handleRegisterPerform()

GET     /public/login               controllers.pub.unauthenticated.Login.loginPage()
GET     /public/register            controllers.pub.unauthenticated.Register.registerPage()

GET     /public/validate            controllers.pub.user.ValidateEmail.handleValidation()

GET     /public/rsa/base64          controllers.api.Login.getJWTPublicKey()

GET     /assets/*file               controllers.Assets.versioned(path = "/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
