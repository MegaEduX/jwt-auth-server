# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.pub.Application.index()

POST    /register                   controllers.Signup.signup()
POST    /login                      controllers.Authenticate.login()

GET     /rsa/pub/base64             controllers.Authenticate.getJWTPublicKey()

GET     /debug/showAllUsers         controllers.Debug.showAllUsers()
GET     /debug/createJWT            controllers.Debug.createJWT()
GET     /debug/populate             controllers.Debug.populateWithTestData()

POST    /user/changePassword        controllers.UserManagement.changePassword()

POST    /public/login/perform       controllers.pub.LoginPerform.handlePerformLogin()
POST    /public/register/perform    controllers.pub.RegisterPerform.handleRegisterPerform()

GET     /public/login               controllers.pub.Login.loginPage()
GET     /public/register            controllers.pub.Register.registerPage()

GET     /assets/*file               controllers.Assets.versioned(path = "/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
